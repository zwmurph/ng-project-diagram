{
  "name": "ng-project-diagram",
  "displayName": "NG Project Diagram",
  "description": "VS Code extension that visualises the structure of an Angular project",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.63.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ng-project-diagram.diagram"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ng-project-diagram.diagram",
        "title": "Show NG Project Diagram"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ng-project-diagram.diagram",
          "title": "Show NG Project Diagram",
          "when": "workbenchState != empty"
        }
      ],
      "explorer/context": [
        {
          "when": "filesExplorerFocus",
          "command": "ng-project-diagram.diagram"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.2",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^3.9.10"
  },
  "dependencies": {
    "@angular/compiler": "^10.2.5",
    "@angular/compiler-cli": "^10.2.5",
    "@angular/core": "^10.2.5",
    "@ts-graphviz/node": "^0.4.0",
    "ngast": "^0.5.0",
    "ts-graphviz": "^0.13.2"
  }
}
